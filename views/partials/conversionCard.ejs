<div class="conversion-card card p-4 mb-4 shadow-sm">
  <form class="conversion-form" action="<%= action %>" method="POST" enctype="multipart/form-data">
    <div class="drop-area text-center mb-3 p-3 border border-2 border-dashed rounded" onclick="this.querySelector('input[type=file]').click()">
      <input type="file" name="<%= fileInputName %>" style="display:none" <%= multiple ? 'multiple' : '' %> accept="<%= accept %>">
      <div class="drop-text mb-2">
        <strong>Drag & Drop your <%= label %> here</strong><br>or
      </div>
      <button type="button" class="btn btn-outline-primary mb-2">Choose File</button>
      <div class="selected-files small text-muted"></div>
    </div>
    <% if (typeof extraFields !== 'undefined') { %>
      <%= extraFields %>
    <% } %>
    <button type="submit" class="btn btn-primary w-100"><%= buttonText %></button>
  </form>
  <div class="conversion-result text-center mt-3" style="display:none">
    <div class="ready-text mb-2">Your document is ready!</div>
    <a class="btn btn-success download-btn mb-2" href="#" download>Download</a>
    <button class="btn btn-outline-secondary convert-another-btn">+ Convert Another</button>
  </div>
</div> 